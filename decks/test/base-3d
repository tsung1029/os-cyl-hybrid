!--------the node configuration for this simulation--------
node_conf 
{
  node_number(1:3) =  NodeNumberTag
  if_periodic(1:3) =  .true., .true., .true.,
}

!----------spatial grid----------
grid 
{
  nx_p(1:3) =  10, 10, 10,
  coordinates = "cartesian",
}

!----------time step and global data dump timestep number----------
time_step 
{
  dt     =   0.05d0,
  ndump  =    10, 
}

!----------restart information----------
